<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>
<body>
<% if (success) { %>
<div class="alert alert-success" role="alert"><%= success %></div>
<% } %>
<% if (error) { %>
<div class="alert alert-danger" role="alert"><%= error %></div>
<% } %>

<div class="innner_box">

    <div class="alingright">
        <a class="btn btn-primary" href="/addcategory">增加分类</a>
    </div>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th><input type="checkbox"></th>
            <th>名称</th>
            <th>别名</th>
            <th>父级</th>
            <th width="65%">描述</th>
            <th>文章数</th>
            <th>操作</th>
        </tr>
        </thead>
        <tbody>
        <% category.forEach(function (category, index) { %>
            <tr>
                <td><input type="checkbox"></td>
                <td><%= category.name %></td>
                <td><%= category.alias %></td>
                <td><%= category.parent %></td>
                <td><%= category.describe %></td>
                <td></td>
                <td><a href="#">编辑</a> </td>
            </tr>
        <% }) %>
        </tbody>
    </table>
</div>

<script type="text/javascript" src="/js/jquery-1.8.3.min.js"></script>
<script type="text/javascript">
    $(function(){
        if($(".alert").length>0) {
            $(".alert").each(function(i){
                var _this=$(this);
                _this.css("margin-left",-_this.width()/2);
                setTimeout(function(){
                    _this.fadeOut(800);
                },800)
            })
        };
    })
</script>
</body>
</html>