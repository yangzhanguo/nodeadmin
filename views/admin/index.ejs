<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
    <!--[if lt IE 9]>
    <script type="text/javascript" src="/js/html5shiv.js"></script>
    <![endif]-->

    <style>

    </style>
</head>
<body>
<% if (success) { %>
<div class="alert alert-success" role="alert"><%= success %></div>
<% } %>
<% if (error) { %>
<div class="alert alert-danger" role="alert"><%= error %></div>
<% } %>
<div id="navbar">

    <% if (user) { %>
        <span id="username"><%= user.username %></span>
        <a href="/logout">退出</a>
    <% } else{ %>
        <a href="/login"></a>
    <% } %>
</div>
<div id="content">
    <div id="solidbar">
        <ul class="navlist">
            <li class="active"><a target="mianiframe" href="/home"><i></i><span>首页</span></a></li>
            <li><a target="mianiframe" href="/category"><i></i><span>分类管理</span></a></li>
            <li><a target="mianiframe" href="#"><i></i><span>文章管理</span></a></li>
            <li><a target="mianiframe" href="#"><i></i><span>相册管理</span></a></li>
        </ul>
    </div>
    <div id="mian">
        <iframe src="/home" name="mianiframe" frameborder="0"></iframe>
    </div>
</div>
<script type="text/javascript" src="/js/jquery-1.8.3.min.js"></script>
<script>
    $(function () {


       if($(".alert").length>0) {
           $(".alert").each(function(i){
               var _this=$(this);
               _this.css("margin-left",-_this.width()/2);
               setTimeout(function(){
                   _this.fadeOut(800);
               },800)
           })
      };

        $("#content").height($("body").eq(0).height() - $("#navbar").height());
        $(window).resize(function () {
            $("#content").height($("body").eq(0).height() - $("#navbar").height());
        });

        $("#solidbar li").click(function(){
           $(this).addClass("active").siblings().removeClass("active");
        });

    })
</script>
</body>
</html>