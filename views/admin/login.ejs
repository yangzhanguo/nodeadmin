<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link rel="stylesheet" type="text/css" href="/css/base.css">
  <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
  <style>
      .container { padding-top: 150px;}
  </style>
</head>
<body>
<% if (success) { %>
<div class="alert alert-success" role="alert"><%= success %></div>
<% } %>
<% if (error) { %>
<div class="alert alert-danger" role="alert"><%= error %></div>
<% } %>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <form method="post" class="registerform">
            <div class="form-group">
              <input datatype="*,s" type="text" autocomplete="off" name="username" class="form-control"  placeholder="用户名">
            </div>
            <div class="form-group">
              <input  datatype="*" autocomplete="off" name="userpw" type="password"  maxlength="20"  class="form-control" placeholder="密码">
            </div>
            <input id="regloginbtn"  class="btn btn-primary btn-block" type="submit" value="登录" />
          </form>
        </div>
    </div>
</div>
<script type="text/javascript" src="/js/jquery-1.8.3.min.js"></script>
<script type="text/javascript" src="/js/autocomplete.js"></script>
<script type="text/javascript" src="/js/validform.js"></script>
<script>
    $(function(){
        $(".registerform").Validform({
            tiptype:3
        });

        if($(".alert").length>0) {
            $(".alert").each(function(i){
                var _this=$(this);
                _this.css("margin-left",-_this.width()/2);
                setTimeout(function(){
                    _this.fadeOut(800);
                },800)
            })
        };
    });
</script>
</body>
</html>