<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <style>
        .alingright {text-align: right; padding-bottom: 15px;}

    </style>
</head>
<body>
<% if (success) { %>
<div class="alert alert-success" role="alert"><%= success %></div>
<% } %>
<% if (error) { %>
<div class="alert alert-danger" role="alert"><%= error %></div>
<% } %>
<div class="innner_box">
    <div class="alingright">
        <a class="btn btn-primary" href="/category">返回列表</a>
    </div>
    <form method="post">
    <div class="form-group">
        <label class="control-label">名称</label>
        <input name="name" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label class="control-label">别名</label>
        <input name="alias" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label class="control-label">父级</label>
        <select name="parent" class="form-control">>
            <option value="-1">无</option>
        </select>
    </div>
    <div class="form-group">
        <label class="control-label">描述</label>
        <textarea name="describe" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-default">提交</button>
    </div>
    </form>
</div>
<script type="text/javascript" src="/js/jquery-1.8.3.min.js"></script>
<script>
    $(function(){
        if($(".alert").length>0) {
            $(".alert").each(function(i){
                var _this=$(this);
                _this.css("margin-left",-_this.width()/2);
                setTimeout(function(){
                    _this.fadeOut(800);
                },800)
            })
        };
    });
</script>
</body>
</html>